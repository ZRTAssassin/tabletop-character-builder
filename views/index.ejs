<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="description" content="Your description goes here">
    <meta name="keywords" content="one, two, three">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Table Top Trait Database</title>

    <!-- external CSS link -->
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/style.css">
    <!-- <link rel="script" href="/js/main.js"> -->
</head>

<body>



    <form action="/traits" method="post">
        <fieldset>
            <legend>Enter New Trait</legend>
            <input type="text" placeholder="name" name="abilityName" required>
            <input type="text" placeholder="description" name="abilityDescription" required>
            <input type="text" placeholder="PHB (151)" name="sourceBook" required pattern="[a-zA-Z]+ \([0-9]+\)">
            <button type="submit">Submit</button>
        </fieldset>
    </form>



    <section>
        <h2>Randomize trait!</h2>
        <p>
            Replace a trait with another random trait.
        </p>
        <button id="update-button">Replace Trait</button>
    </section>

    <section>
        <h2>Remove a trait!</h2>
        <p>
            Deletes a trait. Probably spellcasting. Unless one doesn't exist?
        </p>
        <!-- <button class="delete-button">Delete Spellcasting</button> -->
        


    </section>

    <section class="savedAbilities">
        <h3>Traits</h3>
        <!-- <%= traits %> -->
        <ul class="traits">
            <% for(var i=0; i < traits.length; i++) {%>
                <li class="trait <%= traits[i].name %>">
                    <button class="delete-button <%= traits[i].abilityName %>">&#128465;</button>

                    <button type="button" class="edit-button">&#128393;</button>

                    <h4>
                        <%= traits[i].abilityName %>
                    </h4>
                    <p>
                        <%= traits[i].abilityDescription %>
                    </p>
                    <span id="source">
                        <%= traits[i].sourceBook %>
                    </span>
                </li>
                <% } %>
        </ul>
    </section>


    <!-- <script type="text/javascript" src="js/liana.json"></script> -->
    <!-- <script type="text/javascript" src="/js/main.js"></script> -->
    <script src="js/main.js"></script>
    


</body>

</html>